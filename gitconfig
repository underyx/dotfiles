[core]
    excludesfile = ~/.gitignore.global
    whitespace = space-before-tab,trailing-space

[user]
    name = Bence Nagy
    email = bence@underyx.me
    signingkey = B35D2590

[push]
    default = current

[diff]
    compactionHeuristic = true

[alias]
    pull = pull --rebase
    amend = commit --amend --no-edit
    force = push --force-with-lease
    unstage = reset HEAD --
    add-s = !zsh -c 'git diff -w --no-color "$@" | git apply --cached --ignore-whitespace' -
    review = !git-review-pr
    af = !zsh -c 'git amend && git force'
    a = add
    ap = add --patch
    c = commit
    ca = commit -a
    cm = commit -m
    cam = commit -am
    ch = checkout
    chb = checkout -b
    d = diff
    dc = diff --cached
    f = fetch
    l = log
    lo = log --oneline
    s = status
    sh = show
    rh = reset HEAD
    ri = rebase --interactive
    rc = rebase --continue
    pop = stash pop
    drop = stash drop

[help]
    autocorrect = 5

[init]
    templatedir = ~/.git-templates

[commit]
    gpgsign = true
