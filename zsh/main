source $HOME/.zplugin/bin/zplugin.zsh

source $ZSHHOME/zsh-settings
source $ZSHHOME/functions
source $ZSHHOME/environment
source $HOME/.zshlocal/secrets
source $ZSHHOME/aliases
source $ZSHHOME/plugins

for file in $HOME/.zshlocal/pre/*(.N); do
  source $file
done

if exists fasd; then
  source $ZSHHOME/fasd
fi

if [ -n "$POWERLINE_BASE_DIR" ]; then
  source $ZSHHOME/powerline
fi

if [[ -e ${HOME}/.iterm2_shell_integration.zsh ]]; then
  source ${HOME}/.iterm2_shell_integration.zsh
fi

if exists brew; then
  source $ZSHHOME/dvm
fi

if exists pyenv; then
  eval "$(pyenv init -)"
fi

if exists direnv; then
  eval "$(direnv hook zsh)"
fi

for file in $HOME/.zshlocal/post/*(.N); do
  source $file
done

