# The following lines were added by compinstall
zstyle ':completion:*' auto-description 'giff %d'
zstyle ':completion:*' completer _expand _complete _ignored _correct _approximate
zstyle ':completion:*' expand prefix suffix
zstyle ':completion:*' format 'completing %d'
zstyle ':completion:*' ignore-parents parent pwd
zstyle ':completion:*' insert-unambiguous true
zstyle ':completion:*' list-colors ''
zstyle ':completion:*' list-suffixes true
zstyle ':completion:*' matcher-list '' 'm:{[:lower:][:upper:]}={[:upper:][:lower:]}' '+r:|[._-]=** r:|=**' '+l:|=* r:|=*' # ignore LineLengthBear
zstyle ':completion:*' max-errors 1 numeric
zstyle ':completion:*' menu select=2
zstyle ':completion:*' original false
zstyle ':completion:*' prompt 'corrected with %e:'
zstyle ':completion:*' select-prompt %SScrolling active: current selection at %p%s
zstyle ':completion:*' verbose true
#zstyle :compinstall filename '/Users/underyx/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

setopt incappendhistory sharehistory autocd beep extendedglob notify
unsetopt nomatch

bindkey '^R' history-incremental-pattern-search-backward
bindkey '^?' backward-delete-char
bindkey '^[[A' up-line-or-search
bindkey '^[[B' down-line-or-search

export KEYTIMEOUT=1
export HISTFILE=~/.zsh_history
export HISTSIZE=100000
export SAVEHIST=100000
export HIST_IGNORE_SPACE=1

fpath=(~/.zsh/completions $fpath)

export ZSHCACHE=$ZSHHOME/.cache
export ZSH_CACHE_DIR=$ZSHCACHE
