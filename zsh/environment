export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

export GOPATH="$HOME/go"
export PATH="./node_modules/.bin:$PATH:$HOME/bin:$HOME/.npm-packages/bin:$GOPATH/bin:/usr/local/m-cli:/usr/local/sbin:/usr/local/share/pypy3"

if exists vim; then
  export EDITOR=$(command -v vim)
fi

if exists gpg; then
  export GPG_TTY=$(tty)
fi

export VISUAL="$EDITOR"

# fix tmux 2.2 on macOS
export EVENT_NOKQUEUE=1
