[Default]
bears =
  SpaceConsistencyBear,
  LineLengthBear,
  InvalidLinkBear,
  KeywordBear,
  GitCommitBear,
files = **
ignore =
  vim/plugged/**,
  dotbot/**,
  zsh/completions/**,
  .git/**,
  env/**,
  **~,
  .coafile,
  .gitmodules,
use_spaces = yes
cs_keywords = FIXME
ci_keywords = 
max_line_length = 120
default_actions =
  SpaceConsistencyBear: ShowPatchAction

[yaml]
bears = YAMLLintBear
files =
  **.yml,
yamllint_config = .yaml-lint

[markdown]
bears = MarkdownBear
files = **.md
default_actions =
  MarkdownBear: ShowPatchAction

